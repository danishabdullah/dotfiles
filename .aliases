#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias c="cd ~/code"
alias g="git"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
	export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
else # macOS `ls`
	colorflag="-G"
	export LSCOLORS='BxBxhxDxfxhxhxhxhxcxcx'
fi

# List all files colorized in long format
alias l="ls -lF ${colorflag}"

# List all files colorized in long format, excluding . and ..
alias la="ls -lAF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Get week number
alias week='date +%V'

# Lean updates (OS updates are better handled manually); refresh uv, npm, and Ruby gems if present.
update() {
	if declare -F dotfiles_is_macos >/dev/null 2>&1 && dotfiles_is_macos; then
		if command -v brew >/dev/null 2>&1; then
			brew update && brew upgrade && brew cleanup --prune=30
		fi
	elif declare -F dotfiles_is_debian >/dev/null 2>&1 && (dotfiles_is_debian || dotfiles_is_wsl); then
		if command -v apt >/dev/null 2>&1; then
			sudo apt update && sudo apt upgrade
		fi
	fi

	if command -v uv >/dev/null 2>&1; then
		uv self update || true
		uv python install 3.13 --upgrade || true
		_outdated="$(uv pip list --outdated --system | awk 'NR>2 {print $1}')"
		if [ -n "$_outdated" ]; then
			printf '%s\n' "$_outdated" | xargs uv pip install --upgrade --system || true
		fi
		unset _outdated
	fi
	if command -v npm >/dev/null 2>&1; then
		npm install npm -g || true
		npm update -g || true
	fi
	# if command -v gem >/dev/null 2>&1; then
	# 	sudo gem update --system || true
	# 	sudo gem update || true
	# 	sudo gem cleanup || true
	# fi
}

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# Canonical hex dump; some systems have this symlinked
command -v hd > /dev/null || alias hd="hexdump -C"

# macOS has no `md5sum`, so use `md5` as a fallback
command -v md5sum > /dev/null || alias md5sum="md5"

# macOS has no `sha1sum`, so use `shasum` as a fallback
command -v sha1sum > /dev/null || alias sha1sum="shasum"

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# URL-encode strings (Python 3)
alias urlencode='python3 - <<'"'"'PY'"'"'\nimport sys, urllib.parse\nprint(urllib.parse.quote_plus(sys.argv[1]))\nPY'

# Merge PDF files, preserving hyperlinks
# Usage: `mergepdf input{1,2,3}.pdf`
alias mergepdf='gs -q -dNOPAUSE -dBATCH -sDEVICE=pdfwrite -sOutputFile=_merged.pdf'

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "${method}"="lwp-request -m '${method}'"
done

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec ${SHELL} -l"

# Faster npm for Europeans
command -v npm > /dev/null && alias npme="npm --registry http://registry.npmjs.eu/"

# When you just want to run the previous command with sudo
alias ffs='eval "sudo $(fc -ln -1)"'

# Update host file
uphosts() {
	local url="https://someonewhocares.org/hosts/hosts"
	local tmp

	tmp="$(mktemp 2>/dev/null || mktemp -t uphosts 2>/dev/null)" || {
		echo "uphosts: failed to create temp file" >&2
		return 1
	}

	if command -v curl >/dev/null 2>&1; then
		if ! curl -fsSL --proto '=https' --tlsv1.2 "$url" -o "$tmp"; then
			echo "uphosts: failed to download hosts list" >&2
			rm -f "$tmp"
			return 1
		fi
	elif command -v wget >/dev/null 2>&1; then
		if ! wget -qO "$tmp" "$url"; then
			echo "uphosts: failed to download hosts list" >&2
			rm -f "$tmp"
			return 1
		fi
	else
		echo "uphosts: curl or wget is required" >&2
		rm -f "$tmp"
		return 1
	fi

	if [[ ! -s "$tmp" ]] || ! grep -qi "someonewhocares" "$tmp"; then
		echo "uphosts: downloaded file looks invalid" >&2
		rm -f "$tmp"
		return 1
	fi

	if [[ ! -f /etc/hosts.backup ]]; then
		sudo cp /etc/hosts /etc/hosts.backup
	fi

	sudo bash -c "cat /etc/hosts.backup > /etc/hosts && cat '$tmp' >> /etc/hosts"
	rm -f "$tmp"
}

# Update aliases
alias aliases="code ~/.aliases"

# Load profile again
alias load_profile="source ~/.bash_profile"

# Update bash_profile
alias bash_profile="code ~/.bash_profile"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# OS-specific aliases
if declare -F dotfiles_is_macos >/dev/null 2>&1; then
	if dotfiles_is_macos && [[ -r "$HOME/init/os/aliases.macos" ]]; then
		source "$HOME/init/os/aliases.macos"  # shellcheck source=/dev/null
	elif dotfiles_is_wsl && [[ -r "$HOME/init/os/aliases.wsl" ]]; then
		source "$HOME/init/os/aliases.wsl" # shellcheck source=/dev/null
	elif dotfiles_is_debian && [[ -r "$HOME/init/os/aliases.debian" ]]; then
		source "$HOME/init/os/aliases.debian" # shellcheck source=/dev/null
	fi
fi
