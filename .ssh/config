# ---------- Global client defaults ----------
Host *
 # Handle Ghostty issues
  SetEnv TERM=xterm-256color

 # Safety: don't leak creds, verify hosts sensibly
  ForwardAgent no
  ForwardX11 no
  ForwardX11Trusted no
  HashKnownHosts yes
  StrictHostKeyChecking accept-new
  CheckHostIP yes
  UpdateHostKeys yes
  VisualHostKey yes
  VerifyHostKeyDNS ask

  # Robustness: keep bad networks from hanging
  ServerAliveInterval 30
  ServerAliveCountMax 3
  TCPKeepAlive no

  # Speed: reuse connections, compress payloads
  Compression yes
  ControlMaster auto
  ControlPath ~/.ssh/cm-%C
  ControlPersist 10m
  # Noise level helpful for debugging
  LogLevel VERBOSE

  # Trim enterprise/Kerberos delay unless you actually use it
  GSSAPIAuthentication no

Host api-root
  HostName api.graph.one
  User root

Host api-danish
  HostName api.graph.one
  User danish

Host api-deploy
  HostName api.graph.one
  User deploy
  RemoteCommand cd /home/deploy/apps/graph-one-api && exec $SHELL -l
  RequestTTY yes

Host dev1-root
  User root
  IdentityFile ~/.ssh/id_rsa
  HostName dev1.hive.one
  ForwardAgent yes

Host dev1-danish
  User danish
  IdentityFile ~/.ssh/id_rsa
  HostName dev1.hive.one
  ForwardAgent yes

Host db1-root
  User root
  IdentityFile ~/.ssh/id_rsa
  HostName db1.graph.one
  ForwardAgent yes
  # Grafana
  LocalForward 3000 localhost:3000
  # Prometheus
  LocalForward 9090 localhost:9090
  # Postgres
  LocalForward 5432 localhost:5432

Host db1-danish
  User danish
  IdentityFile ~/.ssh/id_rsa
  HostName db1.graph.one
  ForwardAgent yes
  # Grafana
  LocalForward 3000 localhost:3000
  # Prometheus
  LocalForward 9090 localhost:9090
  # Postgres
  LocalForward 5432 localhost:5432

Host nas
  User danish
  HostName nullpointernas
  ForwardAgent yes
  # Sabnzbd
  LocalForward 8080 localhost:8080
  # qBittorrent
  LocalForward 8081 localhost:8081
  # Jellyfin
  LocalForward 8096 localhost:8096
  # Sonarr
  LocalForward 8989 localhost:8989
  # Radarr
  LocalForward 7878 localhost:7878
  # Lidarr
  LocalForward 8686 localhost:8686
  # Prowlarr
  LocalForward 9696 localhost:9696
  # Jellyseer
  LocalForward 5055 localhost:5055
  # Readarr
  LocalForward 8787 localhost:8787
  # Whisparr
  LocalForward 6969 localhost:6969
  # PLEX
  LocalForward 32400 localhost:32400
  # PiHole
  LocalForward 8053 localhost:8053
